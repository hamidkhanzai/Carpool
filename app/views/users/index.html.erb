<div class="table">
  <h2>Users</h2>
  <table summary="users list" class="table table-striped">
    <tr class="success">
      <th>&nbsp;</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Name</th>

      <th>Email</th>
      <th>NID No</th>
      <th>Licence No</th>
      <th colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Action</th>
    </tr>






        <tr>
          <td>&nbsp;</td>
          <td><%= @users.first_name %></td>
          <td><%= @users.last_name%></td>
          <td><%= @users.username %></td>

          <td><%= @users.email %></td>
          <td><%= @users.nid_no %></td>
          <td><%= @users.licence_no %></td>


          <td><%= link_to("Edit General Information",{:action => "edit", :id=> @users.id},:class => "action edit") %></td>
          <td> <%= link_to 'Change Password', edit_user_registration_path %></td>

          <td><%= link_to("Delete",{:action=>'destroy',:id=> @users.id},:confirm=> "Are You Sour you Want to Delete This Record?", :method => :delete, :class => "action edit") %></td>


        </tr>
  </table>
  <% if @users.Admin?%>
  <%= link_to 'Create New User', new_user_path %>
  <% end %>
</div>