<div style="height: 450px">
 
<div class="table">
	

	
  <h2>List of Routes</h2>
  <table summary="users list" class="table table-striped">
    <tr class="success">
      <th>&nbsp;</th>
      <th>Frome</th>
      <th>Destanition</th>
      <th>Price</th>
      <th>Travel Date</th>
      <th>Travel Time</th>
      
      
     
      <th colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Action</th>
    </tr>




    <%@routs.each do |rout| %>
    <tr>
      <td>&nbsp;</td>
      <td><%= rout.d_from %></td>
      <td><%= rout.d_to%></td>
      <td><%= number_to_currency(rout.price, :unit => "Afg;", :format => "%n %u") %></td>

      <td><%= rout.travel_date %></td>
      <td><%= rout.travel_t %></td>
     
      <td>


        <div class="btn-group">
          <button class="btn btn-primary">Action</button>
          <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
            <span class="caret "></span>
          </button>
          <ul class="dropdown-menu">

            <li> <%= link_to 'Edit', edit_rout_path(rout) %></li>
            <li><%= link_to 'Destroy', rout, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            <li class="divider"></li>
            <li><%= link_to("Register New Car", new_rout_path)%></li>

          </ul>
        </div>



      </td>
    
 
    </tr>

    <% end %>
    
  </table>
  
  <%= link_to 'Create New rout', new_rout_path %>|
  
   
</div>
</div>

<%= will_paginate @routs,:previous_label=>"<<",:next_label=>">>"  %>
