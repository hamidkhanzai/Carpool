<div style="height: 450px">
  <div class="table">
    <h2>Account Request</h2>
    <table summary="users list" class="table table-striped">
      <tr class="success">
        <th>&nbsp;</th>
        <th>License</th>
        <th>Private Car</th>
        <th>Policies</th>
        <th>Description</th>
        <th colspan="3">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Action</th>
      </tr>





      <%@accounts.each do |account| %>
          <tr>
            <td>&nbsp;</td>
            <td><%= account.license %></td>
            <td><%= account.privateCar%></td>
            <td><%= account.policy %></td>
            <td><%= account.description %></td>



            <td><div class="btn-group">
              <button class="btn btn-primary">Action</button>
              <button class="btn dropdown-toggle btn-primary" data-toggle="dropdown">
                <span class="caret "></span>
              </button>
              <ul class="dropdown-menu">
                <li><%= link_to "View User Info", {:action => 'show',:id=>account.user_id,:controller => :users} %></li>
                <li><%= link_to("Promote",{:action => 'promote',:id=>account.user_id,:controller => :users},:class => "action edit") %></li>

                <li><%= link_to("Mark as checked",{:action => "check",:id=>account.id},:class => "action edit") %></li>


                <li class="divider"></li>



                <li><%= link_to("Delete Request",{:action=>'destroy',:id=> account.id},:confirm=> "Are You Sour you Want to Delete This Record?", :method => :delete, :class => "action edit")%></li>

              </ul>
            </div></td>

          </tr>

      <% end %>
    </table>
  </div>
  <div class="table">

    <%= will_paginate @users,:previous_label=>"<<",:next_label=>">>"  %>
  </div>
  <%= link_to 'Create New User', new_user_path %>

</div>